#include <stdio.h>

int main() {
    int n;

    // Leitura do valor de n
    printf("Digite um valor inteiro positivo: ");
    scanf("%d", &n);

    // Loop para gerar as linhas de asteriscos
    for (int i = 1; i <= n; i++) {
        // Loop interno para imprimir os asteriscos na linha i
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n"); // Pular para a prÃ³xima linha
    }

    return 0;
}
