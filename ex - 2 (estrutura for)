#include <stdio.h>

int main() {
    int A, R;

    // Leitura do valor inicial e da razão
    printf("Digite o valor inicial (A): ");
    scanf("%d", &A);

    printf("Digite a razão (R): ");
    scanf("%d", &R);

    // Geração e impressão da sequência de PA
    printf("Sequência em progressão aritmética: ");
    for (int i = 0; i < 10; i++) {
        printf("%d ", A + i * R); // Calcula e imprime cada termo da PA
    }
    printf("\n");

    return 0;
}
