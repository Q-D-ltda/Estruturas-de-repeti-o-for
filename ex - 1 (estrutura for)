#include <stdio.h>

int main() {
    int soma = 0;

    // Loop de 1 até 500;
    for (int i = 1; i <= 500; i++) {
        // Verifica se o número é ímpar e múltiplo de 3;
        if (i % 2 != 0 && i % 3 == 0) {
            soma += i; // Adiciona à soma;
        }
    }

    // Exibe o resultado
    printf("A soma de todos os números ímpares múltiplos de 3 de 1 a 500 é: %d\n", soma);

    return 0;
}
